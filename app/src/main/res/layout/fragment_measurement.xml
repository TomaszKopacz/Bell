<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".newtaskwindow.MeasurementFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/group_margin"
        android:contentDescription="@string/add_task_icon_description"
        android:src="@drawable/temperature" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/label_margin"
                    android:text="@string/task_type_label" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/group_margin">

                    <RadioButton
                        android:id="@+id/temperature_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/radio_margin"
                        android:checked="true"
                        android:text="@string/temperature_button" />

                    <RadioButton
                        android:id="@+id/pressure_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/radio_margin"
                        android:text="@string/pressure_button" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/unit_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/group_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/unit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/icon_margin"
                        android:contentDescription="@string/timer_description"
                        android:clickable="true"
                        android:src="@drawable/ic_unit"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/unit_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/label_margin"
                        android:text="@string/task_unit" />

                    <TextView
                        android:id="@+id/unit_value_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/label_margin"
                        android:text="@string/unit_celsius" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hour_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/group_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/time_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/icon_margin"
                        android:contentDescription="@string/timer_description"
                        android:src="@drawable/ic_clock"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/label_margin"
                        android:text="@string/task_hour_label" />

                    <TextView
                        android:id="@+id/hour_value_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/label_margin" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/group_margin"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/date_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/icon_margin"
                        android:contentDescription="@string/date_description"
                        android:src="@drawable/ic_calendar"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/label_margin"
                        android:text="@string/task_date_label" />

                    <TextView
                        android:id="@+id/date_value_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/label_margin"/>

                </LinearLayout>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/date_expandable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/date_end_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/icon_margin"
                            android:contentDescription="@string/date_description"
                            android:src="@drawable/ic_calendar"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/date_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/label_margin"
                            android:text="@string/task_date_end_label" />

                        <TextView
                            android:id="@+id/end_date_value_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/label_margin"/>

                    </LinearLayout>

                </net.cachapa.expandablelayout.ExpandableLayout>

                <CheckBox
                    android:id="@+id/cycle_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/box_margin"
                    android:text="@string/task_cycle_label" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>
</LinearLayout>