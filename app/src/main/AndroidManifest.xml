<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adam.myapplication">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.board.BoardActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.newtask.types.AddTaskActivity"
            android:parentActivityName=".ui.board.BoardActivity"></activity>

        <receiver android:name=".notification.TaskAlarmReceiver" />

        <activity android:name=".ui.chart.ChartActivity"
            android:parentActivityName=".ui.board.BoardActivity">

        </activity>

        <receiver android:name=".notification.TaskAlarmReceiver" />

    </application>

</manifest>